@using Works_Life_Cycle.Data
@using Microsoft.AspNetCore.Identity
@using Works_Life_Cycle.Models
@inject WorksLifeCycleDB _context;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    
    <li class="nav-item">
        <div class="dropdown">
            <span>
                    <a class="nav-link text-dark" style=";font-family:Arial;">@User.Identity?.Name </a>
          </span>
        <div class="dropdown-content">
                    @if (User.IsInRole("Student") || User.IsInRole("Teacher"))
                    {
                        <form class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="IndexU">
                            <button style="width: 100%; text-align: center" type="submit" class="nav-link btn btn-link text-dark">Os meus projetos</button>
                        </form>
                    }
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button style="width: 100%; text-align: center" type="submit" class="nav-link btn btn-link text-dark">Sair</button>
            </form>
          </div>
        </div>
        
    </li>
    
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" style=";font-family:Arial;">Registar</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" style=";font-family:Arial;">Entrar</a>
    </li>
}
</ul>
