@model Works_Life_Cycle.Models.Project

@{
    ViewData["Title"] = "Submit";
}

<h1>Entregar</h1>

<h4>Projeto</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Title)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Handle)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Handle)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Collection)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Collection.Name)
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Submit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="ProjectId" value="@Model.ProjectId" />
            <input type="hidden" asp-for="Title" />
            <input type="hidden" asp-for="Handle" />
            <input type="hidden" asp-for="DefenceDate" />
            <input type="hidden" asp-for="StudentFK" />
            <input type="hidden" asp-for="SchoolYearFK" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="CollectionFK" />
            <input type="hidden" asp-for="AccessTypeFK" />
            <input type="hidden" asp-for="CourseFK" />
            <div class="form-group fpad">
                <label asp-for="InternalID" class="control-label"></label>
                <input asp-for="InternalID" class="form-control" />
                <span asp-validation-for="InternalID" class="text-danger"></span>
            </div>
            <div class="form-group fpad">
                <label asp-for="TID" class="control-label"></label>
                <input asp-for="TID" class="form-control" />
                <span asp-validation-for="TID" class="text-danger"></span>
            </div>
            <div class="form-group fpad">
                <label asp-for="AbstractPT" class="control-label"></label>
                <textarea asp-for="AbstractPT" class="form-control" >
                </textarea>
                <span asp-validation-for="AbstractPT" class="text-danger"></span>
            </div>
            <div class="form-group fpad">
                <label asp-for="AbstractEN" class="control-label"></label>
                <textarea asp-for="AbstractEN" class="form-control" >
                    </textarea>
                <span asp-validation-for="AbstractEN" class="text-danger"></span>
            </div>
            <div class="form-group fpad">
                <label asp-for="Comments" class="control-label"></label>
                <textarea asp-for="Comments" class="form-control" size="5">
                </textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group fpad">
                <label asp-for="LicenseFK" class="control-label">License</label>
                <select asp-for="LicenseFK" class="form-select" asp-items="ViewBag.LicenseFK" name="License"></select>
            </div>
            
            <div class="form-group fpad">
                <label asp-for="LanguageFK" class="control-label"></label>
                <select asp-for="LanguageFK" class="form-control" asp-items="ViewBag.LanguageFK" name="Language"></select>
                <span asp-validation-for="LanguageFK" class="text-danger"></span>
            </div>
            <div class="form-group fpad">
                <label class="control-label">Relatório (.PDF)</label>
                <input accept=".pdf" type="file" name="file" class="form-control" multiple />
            </div>
            <div class="form-group fpad">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary"  style="margin-left:5px;">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
